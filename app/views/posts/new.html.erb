<h2>Add posts</h2>
<%= form_with(model: @post, url: user_posts_path, method: :post) do |form| %>
  <div class="form-container">
    <%= form.label :title %>
    <%= form.text_field :title, required: true, autofocus: true, class: "form-input" %>

    <%= form.label :text %>
    <%= form.text_area :text, required: true, autofocus: true, class: "form-input" %>

    <%= form.submit "Create", class: "create-button" %>
  </div>
<% end %>